<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FilmsManager.Views.HomePage"
             Title="Films Manager">
    
    <ContentPage.Content>
        <StackLayout>

            <ListView   x:Name="MovieView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell Text="{Binding MovieTitle}"
                                   Detail="{Binding MovieGenre}"
                                   ImageSource="{Binding MovieIcon}"/>

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
            <Button x:Name="AddButton"
                    VerticalOptions="End"
                    HorizontalOptions="Fill"
                    Text="ADD"
                    Pressed="OnAddButtonPressed"/>
            
        </StackLayout>
    </ContentPage.Content>

    <ContentPage.ToolbarItems>
        <ToolbarItem Name="SearchButton" Order="Primary" Icon="SearchIcon2.png" Priority="1"/>
    </ContentPage.ToolbarItems>
</ContentPage>