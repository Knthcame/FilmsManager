<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FilmsManager.Views.SearchFilmPage"
             Title="Film Searcher"
             BackgroundImage="Back1">
    
    <ContentPage.Content>
        <StackLayout>
            <SearchBar Text="{Binding TextEntry}"
                       TextColor="White"
                       Placeholder="Insert Movie Title to Search for"
                       PlaceholderColor="LightGray"
                       SearchCommand="{Binding SearchFilmCommand}"
                       SearchCommandParameter="{Binding TextEntry}"
                       HeightRequest="60"/>

            <ListView ItemsSource="{Binding FilteredMovieList}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ImageCell  Text="{Binding Title}"
                                        TextColor="LightBlue"
                                        Detail="{Binding Genre}"
                                        DetailColor="White"
                                        ImageSource="{Binding Image}"/>

                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            
            </StackLayout>
    </ContentPage.Content>
</ContentPage>