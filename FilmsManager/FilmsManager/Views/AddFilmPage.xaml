<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FilmsManager.Views.AddFilmPage"
             Title="Add film">
    
    <ContentPage.Content>
        <StackLayout>
            
            <Entry  Placeholder="Insert Movie Title" 
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="Start"
                    Text="{Binding MovieTitle}"/>

            <Entry  x:Name="Genre"
                    Placeholder="Insert Movie Genre" 
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="Start"
                    Text="{Binding MovieGenre}"/>

            <Button x:Name="Image"
                    Image="{Binding MovieImage}"
                    HeightRequest="100"
                    WidthRequest="100"
                    Command="{Binding OpenGalleryCommand}"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="StartAndExpand"/>

            <Button x:Name="CheckButton"
                    Command="{Binding AddCommand}"
                    HorizontalOptions="End"
                    VerticalOptions="EndAndExpand"
                    Image="Check3.png"
                    WidthRequest="50"
                    HeightRequest="50"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>