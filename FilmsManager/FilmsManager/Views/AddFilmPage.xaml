<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FilmsManager.Views.AddFilmPage"
             Title="Add film">
    <ContentPage.Content>
        <StackLayout>
            
            <Entry  x:Name="Title"
                    Placeholder="Insert Movie Title" 
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="Start"
                    PropertyChanged="OnTitleAdded"/>

            <Entry  x:Name="Genre"
                    Placeholder="Insert Movie Genre" 
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="Start"
                    PropertyChanged="OnGenreAdded"/>

            <Button x:Name="CheckButton"
                    Pressed="OnCheckButtonPressed"
                    HorizontalOptions="End"
                    VerticalOptions="EndAndExpand"
                    Image="Check3.png"
                    WidthRequest="50"
                    HeightRequest="50"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>